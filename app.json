{
  "expo": {
    "name": "Got It Driver",
    "slug": "got-it-driver",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "gotitdriver",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gotitdriver",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to allow you to upload and select images for delivery verification."
      }
    },
    "android": {
      "adaptiveIcon": { 
        "foregroundImage": "./src/assets/images/icon.png",
        "backgroundColor": "#141d45"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.gotitdriver"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#141d45"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "router": {
      "appDirectory": "src/app"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6bf45b93-acd0-45c7-a0a3-937cfe1415ad"
      }
    }
  }
}
